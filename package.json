{
  "private": true,
  "scripts": {
    "build": "webpack --mode=production",
    "format": "prettier --write .",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "release": "VER=$(daily-version) run-s build version release:*",
    "release:amo": "web-ext-submit --source-dir distribution",
    "release:cws": "webstore upload --source=distribution --auto-publish",
    "test": "run-s lint:* build",
    "version": "dot-json distribution/manifest.json version $VER",
    "watch": "webpack --mode=development --watch"
  },
  "dependencies": {
    "@sentry/browser": "10.37.0",
    "@sentry/tracing": "7.120.4",
    "webext-options-sync": "4.3.0",
    "webextension-polyfill": "0.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "chrome-webstore-upload-cli": "3.5.0",
    "copy-webpack-plugin": "13.0.1",
    "daily-version": "2.0.0",
    "dot-json": "1.3.0",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.5",
    "globals": "^16.5.0",
    "npm-run-all2": "8.0.4",
    "prettier": "3.8.1",
    "size-plugin": "2.0.2",
    "terser-webpack-plugin": "5.3.16",
    "web-ext": "9.2.0",
    "web-ext-submit": "7.8.0",
    "webpack": "5.104.1",
    "webpack-cli": "6.0.1"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "renovate": {
    "extends": [
      "github>browniebroke/renovate-configs"
    ]
  }
}
