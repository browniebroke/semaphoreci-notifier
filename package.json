{
  "private": true,
  "scripts": {
    "build": "webpack --mode=production",
    "format": "prettier --write \"**/*.+(js|json|md)\"",
    "lint:eslint": "eslint --ext .js .",
    "lint:prettier": "prettier --check \"**/*.+(js|json|md)\"",
    "release": "VER=$(daily-version) run-s build version release:*",
    "release:amo": "web-ext-submit --source-dir distribution",
    "release:cws": "webstore upload --source=distribution --auto-publish",
    "test": "run-s lint:* build",
    "version": "dot-json distribution/manifest.json version $VER",
    "watch": "webpack --mode=development --watch"
  },
  "xo": {
    "envs": [
      "browser"
    ],
    "globals": [
      "browser"
    ],
    "ignores": [
      "distribution"
    ]
  },
  "dependencies": {
    "webext-options-sync": "0.21.2",
    "webextension-polyfill": "0.4.0"
  },
  "devDependencies": {
    "chrome-webstore-upload-cli": "1.2.0",
    "copy-webpack-plugin": "5.1.2",
    "daily-version": "0.12.0",
    "dot-json": "1.2.1",
    "eslint": "7.9.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-config-xo": "0.26.0",
    "eslint-plugin-prettier": "3.1.4",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "size-plugin": "1.2.0",
    "terser-webpack-plugin": "1.4.5",
    "web-ext": "4.3.0",
    "web-ext-submit": "4.3.0",
    "webpack": "4.44.2",
    "webpack-cli": "3.3.12"
  }
}
