{
  "private": true,
  "scripts": {
    "build": "parcel build source/manifest.json --no-content-hash --no-source-maps --dist-dir distribution --no-cache --detailed-report 0",
    "format": "prettier --write .",
    "lint:eslint": "eslint --ext .js .",
    "lint:prettier": "prettier --check .",
    "test": "run-p lint:* build",
    "watch": "parcel watch source/manifest.json --dist-dir distribution --no-cache --no-hmr"
  },
  "browserslist": [
    "last 1 Chrome version",
    "last 1 Firefox version"
  ],
  "xo": {
    "envs": [
      "browser",
      "webextensions"
    ]
  },
  "dependencies": {
    "@sentry/browser": "7.27.0",
    "@sentry/tracing": "7.27.0",
    "webext-base-css": "1.4.1",
    "webext-options-sync": "3.1.0"
  },
  "devDependencies": {
    "@parcel/config-webextension": "2.6.2",
    "eslint": "8.30.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "npm-run-all": "4.1.5",
    "parcel": "2.6.2",
    "prettier": "2.8.1",
    "process": "^0.11.10"
  },
  "webExt": {
    "sourceDir": "distribution",
    "run": {
      "startUrl": [
        "https://github.com/fregante/browser-extension-template"
      ]
    }
  },
  "@parcel/bundler-default-bug": "https://github.com/parcel-bundler/parcel/issues/8071",
  "@parcel/bundler-default": {
    "minBundles": 10000000
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": [
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module"
    },
    "env": {
      "es6": true
    },
    "ignorePatterns": [
      "node_modules/",
      "dist/"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "trailingComma": "es5",
          "singleQuote": true,
          "semi": true,
          "arrowParens": "always"
        }
      ]
    }
  },
  "renovate": {
    "extends": [
      "github>browniebroke/renovate-configs"
    ]
  }
}
