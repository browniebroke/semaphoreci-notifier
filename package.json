{
  "private": true,
  "scripts": {
    "build": "webpack --mode=production",
    "format": "prettier --write .",
    "lint:eslint": "eslint --ext .js .",
    "lint:prettier": "prettier --check .",
    "release": "VER=$(daily-version) run-s build version release:*",
    "release:amo": "web-ext-submit --source-dir distribution",
    "release:cws": "webstore upload --source=distribution --auto-publish",
    "test": "run-s lint:* build",
    "version": "dot-json distribution/manifest.json version $VER",
    "watch": "webpack --mode=development --watch"
  },
  "dependencies": {
    "@sentry/browser": "8.55.0",
    "@sentry/tracing": "7.120.3",
    "webext-options-sync": "4.3.0",
    "webextension-polyfill": "0.12.0"
  },
  "devDependencies": {
    "chrome-webstore-upload-cli": "2.2.2",
    "copy-webpack-plugin": "11.0.0",
    "daily-version": "2.0.0",
    "dot-json": "1.3.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.3",
    "npm-run-all2": "6.2.6",
    "prettier": "2.8.8",
    "size-plugin": "2.0.2",
    "terser-webpack-plugin": "5.3.12",
    "web-ext": "7.12.0",
    "web-ext-submit": "7.8.0",
    "webpack": "5.98.0",
    "webpack-cli": "5.1.4"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": [
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module"
    },
    "env": {
      "es6": true
    },
    "ignorePatterns": [
      "node_modules/",
      "dist/"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "trailingComma": "es5",
          "singleQuote": true,
          "semi": true,
          "arrowParens": "always"
        }
      ]
    }
  },
  "renovate": {
    "extends": [
      "github>browniebroke/renovate-configs"
    ]
  }
}
