{
  "private": true,
  "scripts": {
    "build": "webpack --mode=production",
    "format": "prettier --write .",
    "lint:eslint": "eslint --ext .js .",
    "lint:prettier": "prettier --check .",
    "release": "VER=$(daily-version) run-s build version release:*",
    "release:amo": "web-ext-submit --source-dir distribution",
    "release:cws": "webstore upload --source=distribution --auto-publish",
    "test": "run-s lint:* build",
    "version": "dot-json distribution/manifest.json version $VER",
    "watch": "webpack --mode=development --watch"
  },
  "dependencies": {
    "webext-options-sync": "3.0.0",
    "webextension-polyfill": "0.8.0"
  },
  "devDependencies": {
    "chrome-webstore-upload-cli": "2.0.1",
    "copy-webpack-plugin": "10.0.0",
    "daily-version": "2.0.0",
    "dot-json": "1.2.2",
    "eslint": "8.3.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.0",
    "size-plugin": "2.0.2",
    "terser-webpack-plugin": "5.2.5",
    "web-ext": "6.6.0",
    "web-ext-submit": "6.5.0",
    "webpack": "5.64.4",
    "webpack-cli": "4.9.1"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": ["prettier"],
    "plugins": ["prettier"],
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module"
    },

    "env": {
      "es6": true
    },
    "ignorePatterns": ["node_modules/", "dist/"],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "trailingComma": "es5",
          "singleQuote": true,
          "semi": true,
          "arrowParens": "always"
        }
      ]
    }
  },
  "renovate": {
    "extends": [
      "github>browniebroke/renovate-configs"
    ]
  }
}
